{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },

    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 2],
        "object-curly-spacing": ["error", "always"],
        "no-extra-parens": "error",
        "max-len": ["error", { "code": 100 }],
        "no-multi-spaces": "error"
    }
}
